<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Algolia" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="algolia_voiceOverlayBackground">@android:color/background_dark</item>
        <item name="algolia_voiceOverlayTitleTextColor">@color/voice_title</item>
        <item name="algolia_voiceOverlayTitleTextAppearance">
            @style/TextAppearance.Algolia.VoiceOverlay.Title
        </item>
        <item name="algolia_voiceOverlaySuggestionsTextAppearance">
            @style/TextAppearance.Algolia.VoiceOverlay.Suggestions
        </item>
        <item name="algolia_voiceOverlayTitleTextSize">24dp</item>
        <item name="algolia_voiceOverlayHintTextColor">@android:color/secondary_text_dark</item>
        <item name="algolia_voiceOverlaySuggestionsTextColor">@android:color/primary_text_dark
        </item>
        <item name="algolia_voiceOverlaySuggestionsTextSize">18sp</item>
        <item name="algolia_voiceOverlayMicButtonBackground">@drawable/ic_mic</item>
        <item name="algolia_voiceOverlayCloseButtonBackground">
            @android:drawable/ic_menu_close_clear_cancel
        </item>
    </style>

    <style name="TextAppearance.Algolia.VoiceOverlay.Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?algolia_voiceOverlayTitleTextColor</item>
        <item name="android:textSize">?algolia_voiceOverlayTitleTextSize</item>
    </style>

    <style name="TextAppearance.Algolia.VoiceOverlay.Suggestions" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?algolia_voiceOverlaySuggestionsTextColor</item>
        <item name="android:textSize">?algolia_voiceOverlaySuggestionsTextSize</item>
    </style>
</resources>
